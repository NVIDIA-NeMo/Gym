{
  "database": "project_management",
  "description": "Project management board for tracking tasks across teams.",
  "data_schema": {
    "columns": ["task_id", "task_name", "assigned_to_email", "list_name", "due_date", "board"],
    "enums": {
      "list_name": ["Backlog", "In Progress", "In Review", "Completed"],
      "board": ["Back end", "Front end", "Design"]
    }
  },
  "tools": [
